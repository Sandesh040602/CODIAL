<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= locals.title%>
    </title>
    <script src="https://kit.fontawesome.com/2572eefa21.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="home.css">
</head>
<body>
    
    <h1>
        <i class="fas fa-archive"></i>
        My Contact List !!</h1>
        

    <form action="/todo-list" method="post" class="inputs">
        <!-- for wrting discreption -->
        <label for="disc">Write a description:</label>
        <input type="text" placeholder="" required name="name" id="disc">
        
        <!-- for choosing date -->
        <label for="category">Choose a date:</label>
        <input type="date" placeholder="enter the date" required name="phonenos" id="date">
        
        <!-- for selecting category -->
        <label for="category">Choose a category:</label>
        <select id="category" name="category" required>
            <!-- different otions in the category -->
        <option value="Personal">Personal</option>
        <option value="Work">Work</option>
        <option value="cleaning">Cleaning</option>
        <option value="School">School</option>
        </select>
        <button type="submit" >ADD TODO</button>
    </form>

    <form class="delete" action="/delete-list" method="post">
        <button type="submit">DELETE TODO</button>
        <div>
            <!-- showing all the items of the dataset -->
        <% for(let i of todo_lis){%>
            <div class="intern">
            <input type ="checkbox" value=<%=i._id%> id='label-1' name="di">
            <p class="clrdesc"><%=i.desc%></p>
            <p class=<%=i.tag%>><%=i.tag%></p>
            <p class="clrdate"><%=i.date%></p>
            <%}%>
            </div>
        </div>
        
        
          
    </form>
    <!-- the below script is added to show the example of how static files are linked it 
        was linked using app.use(express.static('assets'));
    
    -->
    <script src="/js/home.js"></script>
</body>
</html>